{
  "include": ["src"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESnext",
    "lib": ["ESNext", "DOM"],
    "types": ["vite/client"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "isolatedModules": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  }
}
